{
    "bp-button": {
        "attributes": [
            "type",
            "size",
            "plain",
            "loading",
            "disabled",
            "round",
            "full",
            "no-border"
        ],
        "defaults": [
            "type"
        ],
        "description": "bp-button | 标准化的按钮组件"
    },
    "bp-input": {
        "attributes": [
            "type",
            "placeholder",
            "readonly",
            "disabled",
            "name",
            "autosize",
            "resize",
            "rows"
        ],
        "defaults": [
            "type"
        ],
        "description": "bp-input | 多种类型的输入框组件"
    },
    "bp-avatar": {
        "attributes": [
            "icon",
            "size",
            "src",
            "shape",
            "fit",
            "alt"
        ],
        "defaults": [
            "icon"
        ],
        "description": "bp-avatar | 头像组件"
    },
    "bp-dialog": {
        "attributes": [
            "visible",
            "title",
            "width",
            "top",
            "append-to-body",
            "lock-scroll",
            "close-on-click-mask",
            "close-on-press-escape"
        ],
        "defaults": [
            "visible"
        ],
        "description": "bp-dialog | 对话框组件"
    },
    "bp-image": {
        "attributes": [
            "lazy",
            "src",
            "alt",
            "fit"
        ],
        "defaults": [
            "alt"
        ],
        "description": "bp-image | 图片组件"
    },
    "bp-item-bar": {
        "attributes": [
            "item-list",
            "active-index"
        ],
        "defaults": [
            "item-list"
        ],
        "description": "bp-item-bar | 栏目条组件"
    },
    "bp-select": {
        "attributes": [
            "placeholder",
            "clearable",
            "size"
        ],
        "defaults": [
            "placeholder"
        ],
        "description": "bp-select | 选择器组件"
    },
    "bp-option": {
        "attributes": [
            "label",
            "value"
        ],
        "defaults": [
            "label"
        ],
        "description": "bp-option | 选择器选项"
    },
    "bp-row": {
        "attributes": [
            "gutter"
        ],
        "defaults": [
            "gutter"
        ],
        "description": "bp-row | 布局组件-Row"
    },
    "bp-col": {
        "attributes": [
            "span",
            "offset",
            "xs",
            "sm",
            "md",
            "lg",
            "xl"
        ],
        "defaults": [
            "gutter"
        ],
        "description": "bp-col | 布局组件-Row"
    }
}