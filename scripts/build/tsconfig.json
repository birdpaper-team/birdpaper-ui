{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2015",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": [
    "../../packages/components/**/*.ts",
    "../../packages/components/**/*.d.ts",
    "../../packages/components/**/*.tsx",
    "../../packages/components/**/*.vue"
  ],
  // 指定不需要被编译的目录
  "exclude": ["node_modules"]
}
