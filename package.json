{
  "private": "false",
  "description": "BirdpaperUI Workspaces",
  "packageManager": "pnpm@8.10.4",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "cz": "czg emoji",
    "lint": "oxlint -D correctness -W suspicious",
    "docs:dev": "pnpm run -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "docs:build:root": "pnpm run -C docs build:root",
    "docs:preview": "pnpm run -C docs preview",
    "clean": "rimraf dist && pnpm run -r --parallel clean",
    "build": "pnpm run clean && pnpm run -C scripts/build start",
    "yalc": "pnpm run clean && pnpm run build && cd dist/birdpaper-ui && yalc publish --push",
    "test": "vitest",
    "vitest:ui": "vitest --ui"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "dependencies": {
    "@birdpaper-ui/components": "workspace:*",
    "@birdpaper-ui/theme": "workspace:*",
    "@vueuse/core": "^10.11.0",
    "async-validator": "^4.2.5",
    "birdpaper-icon": "^0.1.0",
    "dayjs": "^1.11.3"
  },
  "devDependencies": {
    "@pnpm/find-workspace-packages": "^4.0.16",
    "@pnpm/types": "^8.4.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.19.25",
    "@unocss/reset": "^0.61.7",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "1.6.0",
    "@vue/test-utils": "^2.0.0",
    "@vue/tsconfig": "^0.1.3",
    "commitizen": "^4.3.0",
    "happy-dom": "12.10.3",
    "cz-git": "^1.3.8",
    "czg": "^1.3.8",
    "jsdom": "16.4.0",
    "rimraf": "^3.0.2",
    "oxlint": "^0.6.1",
    "prettier": "^2.7.1",
    "sass": "^1.77.8",
    "tsx": "^4.7.1",
    "typescript": "^4.7.4",
    "unocss": "^0.61.7",
    "unplugin-vue-macros": "^2.7.11",
    "vite": "^5.3.5",
    "vitest": "1.6.0",
    "vue": "^3.5.0",
    "vue-router": "^4.0.16",
    "vue-tsc": "^0.38.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./cz.config.js"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "oxlint --fix"
  }
}
