{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"],
    "noImplicitAny": false,
    "baseUrl": ".",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "components/**/*.d.ts",
    "components/**/*.ts",
    "components/**/*.vue",
    "components/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.jsx",
   ],
  "exclude": ["node_modules", "**/*.js"]
}
