{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "lib": ["DOM", "ES2020"],
    "rootDir": ".",
    "paths": {
      "@birdpaper-ui/*": ["packages/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": [
    "packages/birdpaper-ui/**/*.ts",
    "packages/birdpaper-ui/**/*.d.ts",
    "packages/birdpaper-ui/**/*.tsx",
    "packages/birdpaper-ui/**/*.vue",
    "packages/components/**/*.ts",
    "packages/components/**/*.d.ts",
    "packages/components/**/*.tsx",
    "packages/components/**/*.vue",
    "global.d.ts",
    "env.d.ts"
  ],
  // 指定不需要被编译的目录
  "exclude": ["node_modules"]
}
